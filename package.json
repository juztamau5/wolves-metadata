{
  "name": "wolves-metadata",
  "version": "1.0.0",
  "description": "Metadata server for wolves.finance dapp",
  "homepage": "https://github.com/wolvesofwallstreet/wolves-metadata",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.1.0"
  },
  "keywords": [
    "dapp",
    "decentralized",
    "defi",
    "finance",
    "gamification",
    "lending",
    "liquiditypooling",
    "marketmaking",
    "nonfungible",
    "semifungible"
  ],
  "scripts": {
    "audit": "audit-ci --moderate --package-manager yarn",
    "build": "snowpack build",
    "clean": "rimraf node_modules",
    "depends": "make -C tools -j$(getconf _NPROCESSORS_ONLN)",
    "format": "prettier --write . && eslint --fix .",
    "lint": "prettier --check . && eslint .",
    "start": "snowpack dev",
    "test": "ts-mocha --recursive --extension ts --require esm"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "audit-ci": "^3.1.1",
    "chai": "^4.3.4",
    "eslint": "^7.23.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "esm": "^3.2.25",
    "grunt": "^1.3.0",
    "grunt-cli": "^1.4.1",
    "grunt-exec": "^3.0.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "prettier-plugin-pkg": "^0.8.0",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "rimraf": "^3.0.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "snowpack": "^3.2.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "bundleDependencies": false,
  "target": "web"
}
